
@{
    ViewBag.Title = "ExceptionRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap4-toggle.min.css" rel="stylesheet" />
<style type="text/css">
    #expmenu {
        margin: 0px;
        padding: 0px;
    }

    #exceptionSubmrnu li a {
        color: white;
    }
    
    #exceptionSubmrnu li a:hover {
        color: black;
        background-color: #f3eded;
    }

    #exceptionNavigaton {
        background-color: #37474F;
        margin-bottom: 0;
    }
</style>
<div class="container-fluid">
    <p style="text-align: center; font-size: 25px;">
        <b>Air Freight Tracker</b>
    </p>
    <hr style="margin: 0px" />
    <div class="row">
        <div id="exceptionNavigaton" class="navbar navbar-default navbar-static-top">
            <div id="expmenu">
                <div class="navbar-collapse collapse">
                    <ul id="exceptionSubmrnu" class="nav navbar-nav">
                        <li><a href="#" onclick="GetWidgetPartial('_airFreightDetails')">Air Freight Entry</a></li>
                        <li><a href="#" onclick="GetWidgetPartial('_airFreightList')">Air Freight List</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="excpetionDashboard">

        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">

    function GetWidgetPartial(variable) {
        var urlpath = '@Url.Action("GetWidgetPartial", "Exception")';
            $.ajax({
                url: urlpath,
                type: "Post",
                data: {viewName:variable},
                async: true,
                success: function(data) {
                       if (data) {
                           $('#excpetionDashboard').empty();
                           $('#excpetionDashboard').append(data);
                        }
                    }
                });
    }

</script>


