                var qty = parseFloat($("#update_invoiceQty_" + id).val().replace(/,/g, ''));
                var value = parseFloat($("#update_invoiceValue_" + id).val().replace(/,/g, ''));
                var discount = $("#update_discount_" + id).html().replace(/,/g, '');
                var total = parseFloat($("#update_total_" + id).html().replace(/,/g, ''));

                q += qty;
                v += value;
                t += total

            })

            $('#update_totalInvoiceQty').html(q);
            $('#update_totalInvoiceValue').html(numberWithCommas(Math.floor(v)));
            $('#update_totalPayable').html(numberWithCommas(Math.floor(t)));
            $('#update_totalPaid').html(numberWithCommas(Math.floor(t)));

            var total = parseFloat($("#update_totalPaid").html().replace(/,/g, ''));
            var discount = parseFloat($('#update_discountPercent').val());
