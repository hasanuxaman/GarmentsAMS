            return false;
        }
        else {


            var valueV = parseFloat(rate * qty);
            //alert(discount + " " + valueV);
            //var valueV = rate * qty;
            var Tpaid = parseFloat(valueV - discount);

            $("#update_invoiceValue_" + invoiceDetails).val(valueV);
            $("#update_total_" + invoiceDetails).html(Tpaid);
            //alert($("#update_total_" + invoiceDetails).html())

            var q = 0;
            var v = 0;
            var t = 0;

